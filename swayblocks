[battery]
command=swayBat
interval=5
separator_block_width=15

# Move scripts to separate files so case blocks can be added for interactivity. eg click to open nmtui
# potentially add colors and icons depending on what state each function is in

[volume]
command=swayVol
interval=5
separator_block_width=15

[network]
command=swayNet
interval=20
separator_block_width=15

[memory]
command=free -h | awk '/^Mem:/ {print $3 "/" $2}'
interval=15
separator_block_width=15

[diskspace]
command=df -H | awk '/nvme0n1p2/ {print $3 "/" $2}'
interval=60
separator_block_width=15

[time]
command=date +"%a %d %b %Y %H:%M"
interval=15
separator_block_width=15
